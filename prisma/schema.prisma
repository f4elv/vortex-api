generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum FormStatus {
    novo
    respondido
    em_andamento
    cancelado
    finalizado
}

model Form {
  id                 String     @id @default(uuid())
  name               String
  phone              String
  company            String
  projectDescription String
  deadline           String
  budget             String
  projectType        String
  extraDetails       String?
  status             FormStatus @default(novo)
  createdAt          DateTime   @default(now())
}