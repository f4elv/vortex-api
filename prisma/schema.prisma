generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum FormStatus {
  NOVO
  RESPONDIDO
  EM_ANDAMENTO
  CANCELADO
  FINALIZADO
}

enum ProjectType {
  LANDING_PAGE
  DASHBOARD
  OUTRO
}

model Form {
  id                 String     @id @default(uuid())
  name               String
  phone              String
  company            String
  projectDescription String
  deadline           String
  budget             String
  projectType        ProjectType
  extraDetails       String?
  status             FormStatus @default(NOVO)
  createdAt          DateTime   @default(now())
}